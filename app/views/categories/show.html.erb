<%= @category.name %>
<% if @products.any? %>
    <ul>
        <% @products.each do |product| %>
            <li>
            <%= product.title %>
            
            <%= button_to "Add #{product.title} to cart", line_items_path(:product_id => product.id) %>
            </li>
        <% end %>
    </ul>
<% end %>
