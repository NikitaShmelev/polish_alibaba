<div class="container">
<div class="row">
    				<!-- BEGIN INVOICE -->
					<div class="col-xs-12">
						<div class="grid invoice">
							<div class="grid-body">
								<div class="invoice-title">
									<div class="row">
										<div class="col-xs-12">
											<h2>invoice<br>
											<span class="small">#<%= @order.id %></span></h2>
										</div>
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-xs-6">
										<address>
											<strong>Shippment To:</strong><br>
											<%= @order.delivery_adress %><br>
										</address>
									</div>
									<div class="col-xs-6 text-right">
										
									</div>
								</div>
								<div class="row">
									<div class="col-xs-6">
                                        <% if @order.paid == 0 %>
                                           <address>
                                                <strong style='color: red'>NOT PAID</strong><br>
                                                <% if false %>
                                                  <strong style='color: green'>
                                                    <%= link_to 'PAY', edit_order_path(@order), :onclick => "pay" %>
                                                </strong><br>
                                                <% end %>
                                                
										    </address>
                                        <% else %>
                                            <address style='color: green'>
                                                <strong>Payment Method:</strong><br>
                                                Visa ending **** 1234<br>
                                                h.elaine@gmail.com<br>
										    </address>
                                        <% end %>
										
									</div>
									<div class="col-xs-6 text-right">
										<address>
											<strong>Order Date:</strong><br>
											<%= @order.created_at.to_date %>
										</address>
									</div>
                                    <div class="col-xs-6 text-right" style='color: green'>
										
											<strong>Order Status:</strong><br>
											<%= @order.order_status %>
										
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<h3>ORDER SUMMARY</h3>
										<table class="table table-striped">
											<thead>
												<tr class="line">
													<td><strong>#</strong></td>
													<td class="text-center"><strong>ITEMS</strong></td>
                                                    <td class="text-right"><strong>Price</strong></td>
                                                    <td class="text-right"><strong>Sale</strong></td>
													<td class="text-center"><strong>Shippment</strong></td>
													<td class="text-right"><strong>SUBTOTAL</strong></td>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>1</td>
													<td><strong>
                                                        <%= link_to @order.product_name, product_url(@order.product_id), class: 'nav-btn' %>
                                                    </strong><br><%= @order.product_name %></td>
													<td class="text-center"><%= @order.price %>ZŁ</td>
													<td class="text-center">0 ZŁ</td>
                                                    <td class="text-center">0 ZŁ</td>
													<td class="text-right"><%= @order.price %>ZŁ</td>
												</tr>
												
											</tbody>
										</table>
									</div>									
								</div>
                                <% if current_user %>
								<div class="row">
									<div class="col-md-12 text-right identity">
                                        <strong><%= link_to @order.seller_name, campaign_path(@order.seller_id) %></strong>
									</div>
								</div>
                                <% end %>
							</div>
						</div>
					</div>
					<!-- END INVOICE -->
				</div>
</div>