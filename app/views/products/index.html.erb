<p id="notice"><%= notice %></p>

   
   
       
 
<main>

  <% if @products.any? %>
  <%= link_to 'Create new product', new_product_path %>
      <div class="album py-5 bg-light">
      <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% @products.each do |product| %>
            <div class="col" >
              <div class="card shadow-sm" style='height:100%'>
                <% if product.images.attached? %>
                  <%= image_tag(product.images.first, :class => "bd-placeholder-img card-img-top", style: 'height: 100%; width 225;')%>
                <% else %>
                  <img src="<%= product.image_url%>" alt="" class='bd-placeholder-img card-img-top', 
                            style='height: 100%; width 225;'>
                <% end %>
                <div class="card-body">
                  <p class="card-text"><%= product.short_description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">

                    <%= link_to 'Show', product, class: 'btn btn-sm btn-outline-secondary', type: 'button' %>
                    <% if current_campaign %>
                      <% if current_campaign.id = product.campaign_id %>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        
                      <% end %>
                    <% else %>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Buy</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Add to cart</button>
                    <% end %>
                      
                    </div>
                    <small class="text-muted"><%= product.created_at %></small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    You have no products. Create your first one
    <%= link_to 'Create new product', new_product_path %>
  <% end %>  

  

</main>